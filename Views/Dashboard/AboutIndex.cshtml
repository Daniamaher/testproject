@model IEnumerable<CompanyProject.Models.About>

@{
    ViewData["Title"] = "Manage About ";
}

<h2>About Entries</h2>
<a asp-action="Create" class="btn btn-primary">Add New Entry</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>IsActive</th>
            <th>IsDeleted</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.IsActive</td>
                <td>@item.IsDeleted</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteAbout" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

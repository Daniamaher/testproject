@model CompanyProject.Models.Service

<h2>Edit Service</h2>

<form asp-action="EditService" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="IsDeleted">Is Deleted</label>
        <input asp-for="IsDeleted" type="checkbox" />
    </div>

    <div class="form-group">
        <label for="imageFile">Upload New Image (optional)</label>
        <input type="file" name="imageFile" class="form-control" />
        <small>If you want to change the image, upload a new one.</small>
    </div>

    @if (Model.ImageGuid.HasValue)
    {
        <div class="form-group">
            <label>Current Image:</label><br />
            <img src="/media/ServiceImages/@Model.ImageGuid.Value" alt="@Model.Title" width="200" height="200" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ServiceIndex" class="btn btn-secondary">Cancel</a>
</form>
